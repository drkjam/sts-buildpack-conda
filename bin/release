#!/usr/bin/env bash
#
#   Provide metadata back to the runtime. Output should be in YAML format.
#
#   usage: bin/detect /tmp/build
#
#   Reference: https://devcenter.heroku.com/articles/buildpack-api

#   Location of the app (root dir of git repo e.g. /app).
BUILD_DIR=$1

cat << EOF
---
config_vars:
  PATH: /app/miniconda/bin:/usr/bin:/bin
default_process_types:
  web: gunicorn wsgi
EOF
